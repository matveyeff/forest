extends ../main.layout.pug


block variables
	-	var title	=	'Обо мне'

block scripts
	script(src='works.bundle.js')

block content
	section.works
		block triangles
			+triangles('header__triangles header__triangles_white')
		.works__title-container
			.works__title Мои работы
		.slider-container
			#slider-component

	section.works-about
		h2.works__title.works-about__title Что обо мне говорят
		.works-about__comment
			blockquote.works-about__comment-container
				.works-about__avatar(style="background-image: url('./assets/images/comment_avatar.png')")
				p.works-about__comment-text Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
				cite.works-about__name Ковальчук Дмитрий
				span.works-about__who основатель Loftschool
			blockquote.works-about__comment-container
				.works-about__avatar(style="background-image: url('./assets/images/comment_avatar2.png')")
				p.works-about__comment-text Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
				cite.works-about__name Сабанцев Владимир
				span.works-about__who преподаватель
		.works-about__contact
			.works-about__contact-card
				.works-about__blur(style="background-size: 1903px; background-position-y: -876.851px")
				.works-form-wrap
					h3.works-about__small-title Связаться со мной
					form.works-form
						.works-form__input-wrapper
							label(for="works-name").visually-hidden Имя
							input(type="text" name="name" id="works-name" placeholder="Имя" required="required").works-form__input
						.works-form__input-wrapper
							label(for="works-mail").visually-hidden E-Mail
							input(type="text" name="mail" id="works-mail" placeholder="Email" required="required").works-form__input
						.works-form__input-wrapper
							label(for="works-message").visually-hidden Ваше сообщение
							textarea(name="message" id="works-message" placeholder="Ваше сообщение" required="required").works-form__textarea
						.works-form__buttons-wrapper
							ul.works-form__buttons-list
								li.works-form__buttons-item
									button(type="submit").works-form__buttons Отправить
								li.works-form__buttons-item
									button(type="reset").works-form__buttons Очистить	